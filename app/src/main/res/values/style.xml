<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_primaryBtn" parent="Theme.MaterialComponents.Light">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="style_iconBtn" parent="style_primaryBtn">
        <item name="android:padding">20dp</item>
    </style>

    <style name="style_primaryBtn_special" parent="style_primaryBtn">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_numberBtn" parent="style_primaryBtn">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_advOpBtn" parent="style_primaryBtn">
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>